<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag.SettingsFragment">



    <TextView
        android:id="@+id/set_enable_logging_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable logging (for development purposes)"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"/>

    <Switch
        android:id="@+id/set_enable_logging_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/set_enable_logging_label"
        android:layout_marginEnd="16dp"/>



    <TextView
        android:id="@+id/set_update_frequency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location update frequency (seconds)"
        android:layout_alignParentStart="true"
        android:layout_below="@id/set_enable_logging_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/set_update_frequency_box"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/set_update_frequency_label"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/set_radius_alert_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert distance (metres)"
        android:layout_alignParentStart="true"
        android:layout_below="@id/set_update_frequency_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/set_radius_alert_box"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/set_radius_alert_label"
        android:layout_marginEnd="16dp"/>



</RelativeLayout>